<h2>Available drones</h2>

{{#each drones}}
<div>
    <p>Name: {{this.name}}</p>
        <p>Number of propellers: {{this.propellers}}</p>
        <p>Speed: {{this.maxSpeed}}</p>
    <p>
        <a href="/drones/{{this.id}}/edit">Link</a>
    </p>
    <form method="POST" action= "/drones/{{this.id}}/delete">
        <button>Delete</button>
    </form>
</div>
{{/each}}